{
  "name": "pedigree-mcp",
  "version": "1.0.0",
  "description": "MCP server for generating pedigree tree diagrams as PNG images",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:unit": "vitest run tests/pedigree-renderer.test.ts tests/generate-pedigree.test.ts tests/get-documentation.test.ts",
    "test:integration": "vitest run tests/mcp-server.integration.test.ts",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.25.0",
    "d3": "^7.9.0",
    "jsdom": "^24.1.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "tsx": "^4.19.0",
    "vitest": "^2.1.0"
  }
}
